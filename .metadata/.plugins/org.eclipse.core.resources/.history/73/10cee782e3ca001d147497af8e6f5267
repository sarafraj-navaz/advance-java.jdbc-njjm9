package method1;

public class StrongNumber1 {
	
	public static void main(String[] args) {
		
		for(int i=145;i<=145;i++)
		{
			findFactorial(i);
		}
		
	}
	public static void findFactorial(int n)
	{
		System.err.println(n);
		int a=n;
		int sum=0;
		while(n>0)
		{
			int rem=n%10;
			int fact=1;
			for(int i=1;i<=rem;i++)
			{
				fact=fact*i;
			}
		sum=sum+fact;	
		n=n/10;
		}
	System.out.println("sum of the all factorial "+sum);	
	}
}
